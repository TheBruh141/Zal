---
import MainLayout from "@/layouts/main-layout.astro";
import {CopyButton} from "@/components/copy_button"
import {Textarea} from "../components/ui/textarea";
import {Button} from "../components/ui/button";
import {ModelSelector} from "../components/model_selector"
import {Label} from "@radix-ui/react-select";
import {Separator} from "../components/ui/separator.tsx"
import {
    ContextMenu,
    ContextMenuContent,
    ContextMenuItem,
    ContextMenuTrigger,
} from "@/components/ui/context-menu.tsx"
import {Faqs} from "../components/additional_info"
import {LibraryFiller} from "../components/LIbrary_filler";
---

<MainLayout>

    <div class="flex flex-row justify-center items-center m-6" id="selector_container">
        <ModelSelector client:visible></ModelSelector>
    </div>

    <div class="flex flex-row justify-center items-center" id="big_container">
        <div class="w-1/2">
            <!--Left_trans_box-->
            <p class="m-2"><b>Sumerian Transliteration</b></p>
            <Textarea client:visible placeholder="Enter Text Here" id="Input"/>
        </div>
        <div class="m-6 pt-10 ">
            <!--Arrow-->
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"/>
            </svg>

        </div>
        <div class="w-1/2">
            <p class="m-2"><b>Output (English)</b></p>
            <Textarea placeholder="Enter Text Here"></Textarea>

        </div>
    </div>
    <div class="flex flex-row justify-center items-center gap-5" id="bottom_button_div">

        <Button class="m-2 items-start">Translate!</Button>
        <CopyButton client:load/>
    </div>

    <div class="flex flex-row justify-center items-center gap-5">
        <span class="pad_s"></span>
        <LibraryFiller></LibraryFiller>
        <span class="pad_s"></span>

    </div>

    <Separator></Separator>
    <!-- TODO: restrict this to a size-->


    <div class="flex flex-row justify-center items-center m-6 gap-3">

        <span class="pad"></span>
        <Faqs client:visible class=""></Faqs>
        <span class="pad"></span>

    </div>
</MainLayout>


<style client:visible>

    #selector_container {
        margin-top: 15em;
    }

    #big_container {
        margin-top: 2em;
        margin-inline: 20em;
        margin-bottom: 1em;
    }

    .pad_s {
        margin-inline: 10em;
    }
    .pad {
        margin-inline: 20em;
    }

    #bottom_button_div {
        margin-bottom: 2em;
    }
</style>

